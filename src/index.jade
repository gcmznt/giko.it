mixin icon(name)
    svg(class="icon icon--#{ name }" role="img" aria-label="#{ name }")
        use(xlink:href="##{ name }")

mixin title(name)
    h2(id="_#{name}")
        a(href="#_#{name}")
            +icon(name)
        block


