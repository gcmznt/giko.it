mixin icon(name)
  div&attributes(attributes)
    svg(role="img" aria-label="#{name}")
      use(xlink:href="/assets/icons/icons.svg##{name}")

mixin title(icon, link)
  h1
    a.title(href="##{link}")
      block

mixin mainTitle(icon, link)
  h1&attributes(attributes)
    a.title.title--main(href="##{link}")
      block

mixin social(name, link)
  - var text = link.replace(/^(mailto:|https?:\/\/)/i, "");
  a(class="contact" href=link title=name)&attributes(attributes)
    +icon(name)(class="contact__icon")
    = text

mixin work(name, url, logo, role, dates, tech)
  li.work(itemscope itemtype="http://schema.org/Organization")
    picture
      source(srcset="/assets/img/logo-#{logo}.webp" type="image/webp")
      img(
        class="work__logo"
        src="/assets/img/logo-#{logo}.png"
        alt="#{name} Logo"
        itemprop="logo"
      )
    div
      .work__title
        span #{dates} ‚Äî <span>#{role}</span>
        a(href=url itemprop="url")
          | @<strong itemprop="name">#{name}</strong>
      .work__tech #{tech}

mixin tech(name, code)
  .tech(class="tech--#{code}")
    .tech__symbol
      block
    .tech__name= name

mixin hobby(icon, name, alternative, color)
  .hobby
    +icon(icon)(class="hobby__icon" style=(color ? `color: ${color}` : false))
    .hobby__name.name
      .name__main= name
      .name__alternative= alternative

